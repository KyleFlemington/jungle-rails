<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4> <% @order.email %>
		
	<div class="panel panel-default items">
    <table class="table table-bordered">
      <thead> 
      </thead>
      <tbody>
        <% @line_items.each do |line_item| %>

          <tr>
            <td>
              <%= image_tag line_item.product.image.tiny %>
            </td>
          
            <td>
              <%= line_item.product.name %>
            </td>

            <td>
              <%= line_item.product.description %>
            </td>

            <td>
              <h4><%= line_item.quantity %></h4>
            </td>

            <td>
              <p><%= number_to_currency(line_item.item_price_cents/100) %></p>
            </td>

            <td>
              <p><%= number_to_currency(line_item.item_price_cents/100) %></p>
            </td> 
          </tr>          
      <% end %>

      </tbody>
      <tfoot>
        <tr>
          <th colspan="8">
            TOTAL:
          </th>
          <th>
            <p><%= number_to_currency(@line_items.sum(:total_price_cents)/100) %></p>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  </div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>
